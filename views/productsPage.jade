extends layout

block content
  include topSide
  .x8.x2-move(style='float: none;')
    .line
      include contactSide
      .x9
        .padding-big-left
          .border
            .line.padding-big-top.padding-big-left.padding-big-right
              ul.float-right.bread
                li
                  a.icon-home(href='/client/index') 首页
                li
                  a(href='/client/contact') 产品展示
                if series
                  li
                    a(href=`/client/productShow/series/${series}/page/1`)= series
              h1 产品展示
            hr
            .line
              each product in products
                .xl3.padding-small
                  .padding-big.bg-yellow-light
                    img.margin-big-bottom(src='/images/product.jpg' style='width: 100%;')
                    a(href='#')= product.name
                    br
                    br
                    span.tag.bg-dot= product.series
            include pager